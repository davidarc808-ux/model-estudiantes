<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_estudiante_list" model="ir.ui.view">
        <field name="name">estudiante.list</field>
        <field name="model">colegio.estudiante</field>
        <field name="arch" type="xml">
            <list string="Lista de Estudiantes">
                <field name="name"/>
                <field name="apellido_paterno"/>
                <field name="apellido_materno"/>
                <field name="grado"/>
                <field name="grupo"/>
                <field name="estado" widget="badge" decoration-success="estado == 'aprobado'" decoration-danger="estado == 'no_approved'"/>
            </list>
        </field>
    </record>

    <record id="view_estudiante_form" model="ir.ui.view">
        <field name="name">estudiante.form</field>
        <field name="model">colegio.estudiante</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="estado" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <group string="Datos Personales">
                            <field name="name"/>
                            <field name="apellido_paterno"/>
                            <field name="apellido_materno"/>
                        </group>
                        <group string="Datos AcadÃ©micos">
                            <field name="edad"/>
                            <field name="grado"/>
                            <field name="grupo"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_estudiante" model="ir.actions.act_window">
        <field name="name">Estudiantes</field>
        <field name="res_model">colegio.estudiante</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_escuela_root" name="Escuela" sequence="10"/>
    <menuitem id="menu_estudiante" name="Registro Estudiantes" parent="menu_escuela_root" action="action_estudiante" sequence="10"/>
</odoo>